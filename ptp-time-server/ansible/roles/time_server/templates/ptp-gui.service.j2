[Unit]
Description=PTP Time Server GUI
After=network.target gpsd.service chrony.service ptp4l.service phc2sys.service
Wants=gpsd.service chrony.service ptp4l.service phc2sys.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/ptp-time-server-gui
ExecStart=/usr/bin/python3 /opt/ptp-time-server-gui/app.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
