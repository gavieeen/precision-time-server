# Configuration for phc2sys
# Synchronize system clock to PTP hardware clock

# Interface to use
interface=eth0

# Update interval in seconds
interval=1

# Logging level (0-6)
logging_level=6

# Use syslog for logging
use_syslog=1

# Synchronize to PTP hardware clock
sync_to_ptp=1

# Verbose output
verbose=0

# Step threshold in seconds
step_threshold=0.0001
